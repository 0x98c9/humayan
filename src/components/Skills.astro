---
import { skillCategories } from '../data/skills';

const getLevelColor = (level: string) => {
  switch (level) {
    case 'advanced':
      return 'bg-green-500/20 text-green-400 border-green-500/30';
    case 'intermediate':
      return 'bg-blue-500/20 text-blue-400 border-blue-500/30';
    case 'learning':
      return 'bg-yellow-500/20 text-yellow-400 border-yellow-500/30';
    default:
      return 'bg-slate-500/20 text-slate-400 border-slate-500/30';
  }
};

const getLevelText = (level: string) => {
  switch (level) {
    case 'advanced':
      return 'Advanced';
    case 'intermediate':
      return 'Intermediate';
    case 'learning':
      return 'Learning';
    default:
      return level;
  }
};
---

<section id="skills" class="py-16 sm:py-20 px-4 sm:px-6 lg:px-8 bg-slate-800/30">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12 sm:mb-16 animate-on-scroll animate-fade-in-up">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 sm:mb-4">Tech Stack & Skills</h2>
      <p class="text-slate-400 text-base sm:text-lg max-w-2xl mx-auto px-4 sm:px-0">
        Technologies and tools I use to bring ideas to life. Always learning and expanding my skillset.
      </p>
    </div>
    
    <!-- Skills Categories -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 sm:gap-8 animate-stagger">
      {skillCategories.map((category) => (
        <div class="bg-slate-800 rounded-xl p-4 sm:p-6 border border-slate-700 animate-card">
          <!-- Category Title -->
          <h3 class="text-lg sm:text-xl font-semibold text-white mb-4 sm:mb-6 flex items-center gap-2">
            <div class="w-2 h-2 bg-blue-500 rounded-full flex-shrink-0"></div>
            {category.name}
          </h3>
          
          <!-- Skills List -->
          <div class="space-y-2 sm:space-y-3">
            {category.skills.map((skill) => (
              <div class="flex items-center justify-between group">
                <span class="text-slate-300 group-hover:text-white transition-colors text-sm sm:text-base">
                  {skill.name}
                </span>
                <span class={`px-2 py-1 text-xs rounded-md border ${getLevelColor(skill.level)} transition-all duration-200 whitespace-nowrap`}>
                  {getLevelText(skill.level)}
                </span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <!-- Learning Journey -->
    <div class="mt-12 sm:mt-16 text-center">
      <div class="bg-slate-800 rounded-xl p-6 sm:p-8 border border-slate-700 max-w-4xl mx-auto">
        <h3 class="text-lg sm:text-xl font-semibold text-white mb-3 sm:mb-4">Current Learning Focus</h3>
        <p class="text-slate-300 mb-4 sm:mb-6 leading-relaxed text-sm sm:text-base">
          Currently diving deeper into <span class="text-blue-400 font-medium">React ecosystem</span> and 
          <span class="text-blue-400 font-medium">Astro framework</span> for better UI/UX development. 
          Also exploring <span class="text-blue-400 font-medium">modern deployment practices</span> and 
          <span class="text-blue-400 font-medium">performance optimization</span> techniques.
        </p>
        
        <!-- Learning Progress Bars -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
          <div class="text-left">
            <div class="flex justify-between items-center mb-2">
              <span class="text-xs sm:text-sm text-slate-400">React & Ecosystem</span>
              <span class="text-xs sm:text-sm text-slate-500">75%</span>
            </div>
            <div class="w-full bg-slate-700 rounded-full h-2">
              <div class="bg-blue-500 h-2 rounded-full" style="width: 75%"></div>
            </div>
          </div>
          
          <div class="text-left">
            <div class="flex justify-between items-center mb-2">
              <span class="text-xs sm:text-sm text-slate-400">Astro Framework</span>
              <span class="text-xs sm:text-sm text-slate-500">60%</span>
            </div>
            <div class="w-full bg-slate-700 rounded-full h-2">
              <div class="bg-green-500 h-2 rounded-full" style="width: 60%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
